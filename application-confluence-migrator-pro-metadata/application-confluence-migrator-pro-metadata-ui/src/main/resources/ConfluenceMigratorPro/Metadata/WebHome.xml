  {{/info}}

#end
{{/velocity}}

{{velocity output="false"}}
#template('attachment_macros.vm')
$xwiki.jsfx.use('uicomponents/widgets/upload.js', {'forceSkinAction': true, 'language': ${xcontext.locale}})
$xwiki.ssfx.use('uicomponents/widgets/upload.css', true)
{{/velocity}}

{{velocity}}
#if ($xwiki.exists($metadataproref))
#set ($storeDoc = $xwiki.getDocument('ConfluenceMigratorPro.Metadata.Code.PackagesStore'))
#showAttachmentsLiveData($storeDoc 'metadataPackages')

{{html}}
    #if ($hasEdit || $hasAdmin)
      ## Hide the form because it comes from the platform, and we cannot customize its appearance. We are using a 'facade' button to trigger the upload via JS.
      &lt;form action="$storeDoc.getURL('upload')" enctype="multipart/form-data" method="post" id="addConfluenceMetadataPackage"&gt;
        &lt;div&gt;
          &lt;input type="hidden" name="form_token" value="$!{services.csrf.getToken()}" /&gt;
          &lt;div&gt;
            &lt;div class="fileupload-field"&gt;
              &lt;label class="sr-only" for="confluenceMetadataUploadFile"&gt;$escapetool.xml(
                $services.localization.render('core.viewers.attachments.upload.file'))&lt;/label&gt;
              &lt;input id="confluenceMetadataUploadFile" type="file" name="filepath" size="40" class="uploadFileInput noitems"
                data-max-file-size="$!escapetool.xml($xwiki.getSpacePreference('upload_maxsize'))" accept=".json"/&gt;
            &lt;/div&gt;
          &lt;/div&gt;
        &lt;/div&gt;
      &lt;/form&gt;
    #end

{{/html}}

