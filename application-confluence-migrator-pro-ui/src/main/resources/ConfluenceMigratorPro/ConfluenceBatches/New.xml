{{velocity}}
= Create a batch from scratch

{{html}}
&lt;form method="get" class="xform"&gt;
  &lt;dl&gt;
    #set ($path = "$!escapetool.xml($request.path)")
    &lt;dt&gt;
      &lt;label for="path"&gt;Path&lt;/label&gt;
      &lt;span class="xHint"&gt;
        Select the path where to find the Confluence exports to be imported in this batch.
      &lt;/span&gt;
    &lt;/dt&gt;
    &lt;dd&gt;&lt;input type="text" name="path" id="path" value="$path"/&gt;&lt;/dd&gt;
  &lt;/dl&gt;
  &lt;div class="empty-batch"&gt;
    #displayPrefillForm
  &lt;/div&gt;
  &lt;p&gt;&lt;input id="refreshButton" type="submit" value="Refresh" class="button primary" /&gt;&lt;/p&gt;
&lt;/form&gt;
&lt;hr /&gt;
{{/html}}

{{/velocity}}

{{groovy}}
  import java.nio.file.Path
  import java.nio.file.Paths
  import org.xwiki.xml.XMLUtils

  xcontext.put('fileSeparator', File.separator)
  files = null
  if (request.path) {
    batchPath = request.path
    if (batchPath.startsWith("file:")) {
      batchPath = batchPath.substring(5)
    }
    File folder = new File(batchPath)
    if (folder.isDirectory()) {
      files = folder.listFiles()
    } else {
      println "This path isn't a directory: " + folder

      Path currentRelativePath = Paths.get("")
      String s = currentRelativePath.toAbsolutePath().toString()
      println("Current absolute path is: " + s)
    }
  }
  return // useful because it prevents files from being printed
{{/groovy}}

